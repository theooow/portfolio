<style lang="css">
    a{
        text-decoration: none;
        color: #4472C4;
    }

    a:hover{
        text-decoration: underline;
    }

    p{
        margin: 0 0 1rem;
    }

    h1{
        margin: 0 0 1rem;
        font-size: 2.5rem;
        margin-bottom: .5rem;
    }

    h2{
        margin: 0 0 1rem;
        letter-spacing: 1px;
        text-transform: uppercase;
    }

    .text-blue{
        color: #4472C4;
    }

    .text-darkblue{
        color: #002060;
    }

    .text-uppercase{
        text-transform: uppercase;
    }

    .icon{
        margin-right: .5rem;
    }
    .cv-container{
        display: grid;
        grid-template-columns: 1fr 2fr;
        grid-template-areas:
        "left-column header"
        "left-column right-column";
        width: 1200px;
        margin: 0 auto 20px auto;
    }

    .section{
        margin-bottom: 1.5rem;
    }

    /* LEFT COLUMN */
    .left-column{
        grid-area: left-column;
        padding: 20px;
        color: white;
    }

    .portait {
        width: 150px;
        height: 150px;
        margin: 0 auto 60px auto;
        display: block;
        overflow: hidden;
    }

    .portait img {
        object-fit: cover;
        object-position: right -20px;
        width: 150%;
        height: 100%;
    }

    .skills{
        list-style-type: none;
        padding: 0;
        font-size: 1.1rem;
        letter-spacing: 1px;
        margin: 0 0 1rem;
    }

    /* RIGHT COLUMN */
    .right-column{
        grid-area: right-column;
        color: #fff;
        padding: 20px;
    }

    /* HEADER */
    .header{
        grid-area: header;
        padding: 20px;
        display: flex;
        flex-direction: column;
        justify-content: center;
        color: #fff;
    }

    .infos{
        columns: 2;
        list-style-type: none;
        padding: 0;
    }

    /* CONTENT */
    .content{
        grid-area: content;
    }

    .experience-list{
        list-style-type: circle;
    }

    @media (max-width: 1265px){
        .cv-container{
            width: 100%;
            margin: 50px auto;
            grid-template-columns: 1fr;
            grid-template-areas: "header" "left-column" "right-column";
        }
    }

    @media screen and (max-width: 500px) {
        .left-column {
            padding: 0;
            margin: 0;
        }
    }
</style>