    <form>
      <label for="name" class="fade-left delay-2">Nom</label>
      <input type="text" placeholder="Nom" id="name" class="fade-right delay-3" />
      <label for="email" class="fade-left delay-3">Email</label>
      <input type="email" placeholder="Email" id="email" class="fade-right delay-4"/>
      <label for="message" class="fade-left delay-4">Message</label>
      <textarea placeholder="Message" id="message" class="fade-right delay-5"></textarea>
      <button class="fade-up delay-6">Envoyer</button>
    </form>
  </div>
</div>
<div class="overlay"></div>

<script type="text/javascript">
  document.addEventListener('DOMContentLoaded', () => {
    const container = document.querySelector('.container');

    container.addEventListener('mousemove', (e) => {
      const x = (e.clientX / container.clientWidth) * 100;
      const y = (e.clientY / container.clientHeight) * 100;

      container.style.setProperty('--mouse-x', `${x}%`);
      container.style.setProperty('--mouse-y', `${y}%`);
    });

    // Nouveau code pour les animations au scroll
    const observerOptions = {
      root: null,
      rootMargin: '0px',
      threshold: 0.1
    };

    const observer = new IntersectionObserver((entries) => {
      entries.forEach(entry => {
        if (entry.isIntersecting) {
          entry.target.classList.add('visible');
          // Optionnel : arrêter d'observer l'élément une fois animé
          // observer.unobserve(entry.target);
        } else {
          // Commentez cette ligne si vous ne voulez pas que l'animation se répète
          entry.target.classList.remove('visible');
        }
      });
    }, observerOptions);

    // Sélectionner tous les éléments avec des classes d'animation
    const animatedElements = document.querySelectorAll('.fade-up, .fade-left, .fade-right');
    animatedElements.forEach(el => observer.observe(el));

    const projects = document.querySelectorAll('.project');
    const overlay = document.querySelector('.overlay');

    projects.forEach(project => {
      project.addEventListener('click', (e) => {
        if (e.target.classList.contains('close-btn')) {
          return;
        }

        if (!project.classList.contains('active')) {
          project.classList.add('active');
          overlay.classList.add('active');
          document.body.style.overflow = 'hidden';
        }
      });

      const closeBtn = project.querySelector('.close-btn');
      if (closeBtn) {
        closeBtn.addEventListener('click', (e) => {
          e.stopPropagation();
          closeProject(project);
        });
      }
    });

    overlay.addEventListener('click', () => {
      const activeProject = document.querySelector('.project.active');
      if (activeProject) {
        closeProject(activeProject);
      }
    });

    function closeProject(project) {
      project.classList.remove('active');
      overlay.classList.remove('active');
      document.body.style.overflow = '';
    }

    document.addEventListener('keydown', (e) => {
      if (e.key === 'Escape') {
        const activeProject = document.querySelector('.project.active');
        if (activeProject) {
          closeProject(activeProject);
        }
      }
    });
  });

  document.addEventListener('DOMContentLoaded', function() {
    const navbar = document.querySelector('nav');
    // Remplacez '.container' par le sélecteur de votre div défilante
    const container = document.querySelector('.container');

    if (!navbar || !container) {
      console.error("Navbar ou container non trouvé");
      return;
    }

    function handleScroll() {
      if (container.scrollTop > 50) {
        navbar.classList.add('scrolled');
        console.log('Classe "scrolled" ajoutée, scrollTop:', container.scrollTop);
      } else {
        navbar.classList.remove('scrolled');
        console.log('Classe "scrolled" retirée, scrollTop:', container.scrollTop);
      }
    }

    // Vérifier la position initiale
    handleScroll();

    // Ajouter l'écouteur d'événement sur le conteneur et non sur window
    container.addEventListener('scroll', handleScroll);
    console.log('Écouteur de défilement ajouté au conteneur');
  });
</script>
</body>
</html>
